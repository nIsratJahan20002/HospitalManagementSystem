<script src="~/Scripts/HMS/PatientInfo.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@{
    ViewBag.Title = "PatientInformation";
}

<h2>Patient Information</h2>

<form>

    <input type="text" class="form-control" id="txtPatientId" style="display:none">
    <div class="mb-3">
        <label class="form-label">Patient Name</label>
        <input type="text" class="form-control" id="txtPatientName" autofocus="true" autocomplete="off">
    </div>
    <input type="text" class="form-control" id="txtCellNo" style="display:none">
    <div class="mb-3">
        <label class="form-label">Cell No</label>
        <input type="text" class="form-control" id="txtCellNo" autofocus="true" autocomplete="off">
    </div>
    <div class="mb-3" style="margin-top:10px">
        <button type="button" class="btn btn-primary" onclick="Save()">Submit</button>
        <button type="button" id="UpdateId" class="btn btn-primary" onclick="Update()">Update</button>
    </div>


    <div style="width: 500px;margin-top:10px">
        <table id="tblInfo" class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Edit</th>
                    @*<th>Void</th>*@
                    <th>Id</th>
                    <th>Patient Name</th>
                    <th>Cell No</th>
                </tr>
            </thead>
        </table>
    </div>

</form>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
